<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/navigation_item_list">

    <fragment
        android:id="@+id/navigation_item_list"
        android:name="com.example.digitalrefrige.views.itemList.ItemListFragment"
        android:label="fragment_item_list"
        tools:layout="@layout/fragment_item_list" >
        <action
            android:id="@+id/action_itemListFragment_to_itemDetailFragment"
            app:destination="@id/itemDetailFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            />
    </fragment>

    <fragment
        android:id="@+id/itemDetailFragment"
        android:name="com.example.digitalrefrige.views.itemList.ItemDetailFragment"
        android:label="fragment_item_detail"
        tools:layout="@layout/fragment_item_detail" >
        <argument
            android:name="itemID"
            app:argType="integer" />
    </fragment>


    <fragment
        android:id="@+id/navigation_the_other"
        android:name="com.example.digitalrefrige.views.theOtherFragment.TheOtherFragment"
        android:label="fragment_the_other"
        tools:layout="@layout/fragment_the_other" />

    <fragment
        android:id="@+id/navigation_login"
        android:name="com.example.digitalrefrige.views.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
    </fragment>

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.digitalrefrige.views.login.UserProfileFragment"
        android:label="fragment_user_profile"
        tools:layout="@layout/fragment_user_profile" />


</navigation>